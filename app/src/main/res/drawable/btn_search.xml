<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FF6200EE" />

    <!-- 버튼의 모서리를 둥글게 설정 -->
    <corners android:radius="16dp" />

    <!-- 버튼의 테두리 설정 (필요 시) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- 버튼의 패딩 설정 (선택 사항) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>